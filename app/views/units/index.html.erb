<h1><%= @course.name %></h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>單元順序</th>
      <th>名稱</th>
      <th>說明</th>
      <th>內容</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @course.unit.each do |unit| %>
      <tr>
        <%= render unit %>
        <td><%= link_to "查看單元", course_unit_path(@course, unit), class:"btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新增單元", new_course_unit_path, class:"btn btn-secondary" %>
<%= link_to "返回課程", course_path(@course), class:"btn btn-dark" %>
